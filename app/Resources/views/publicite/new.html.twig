{% extends 'Layouts/Layout_BO.html.twig' %}

{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Ajouter nouvelle publicit√©</h3>
            </div>
            <div class="title_right">
            </div>
        </div>
        <div class="clearfix">
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <br/>
                        {{ form_start(form,) }}
                        <div class="form-group">
                             <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title" >Titre</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.title, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title" >Titre</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.photo, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title" >Titre</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title" >Titre</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.dateDebut, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title" >Titre
                                <span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.dateFin, { 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <input type="submit" value="Ajouter"/>
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <ul>
                            <li>
                                <a href="{{ path('Admin_publicite_index') }}">Back to the list</a>
                            </li>
                        </ul>
                    </div>
                </div>
                {% endblock %}
